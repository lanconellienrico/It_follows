<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/view_geo_view"
        android:layout_width="350dp"
        android:layout_height="410dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_view"
        android:backgroundTint="#0D0D0D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eyes_view_geo" />

    <TextView
        android:id="@+id/set_geo_title2"
        style="@style/TextOnBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="47dp"
        android:text="Thy Domains Crosses"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eyes_view_geo"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/eyes_view_geo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eyes"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_geo_title2"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/crosses_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/view_geo_crosses_sample"
                style="@style/geofenceTitle"
                android:text="nido dei draghi           6 crosses"
                android:visibility="gone"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="335dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/view_geo_none_yet"
        style="@style/no_data_text"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="200dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="No hand hath tamed these forsaken lands, yet."
        app:layout_constraintStart_toStartOf="@+id/set_geo_title2"
        app:layout_constraintTop_toBottomOf="@+id/eyes_view_geo"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <Button
        android:id="@+id/to_set_geo_button"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#222222"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Bind another land to thy will"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

    <Button
        android:id="@+id/delete_geo_button"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#222222"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Nullify these mortal domains"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_set_geo_button"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>