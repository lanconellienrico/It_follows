<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:textColor">#FF3700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name="PlainText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>
    <style name="TextOnBlack">
        <item name="android:textColor">#FF3700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="DescriptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name ="historyActivity">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:backgroundTint">@color/indigo</item>
        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">378dp</item>
        <item name="android:layout_height">62dp</item>
    </style>
    <style name ="calendarTheme">
        <item name="android:colorControlActivated">@color/deep_pink</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
    <style name="datePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF4081</item>
        <item name="android:datePickerStyle">@style/datePickerStyle</item>
    </style>
    <style name="datePickerStyle">
        <item name="android:headerBackground">#FF4081</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>
    <style name="inputGeofenceText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">55dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:backgroundTint">@color/platinum</item>
        <item name="android:textColor">@color/light_font</item>
        <item name="android:textColorHighlight">@color/light_font</item>
        <item name="android:textColorHint">@color/grey_font</item>
    </style>
    <style name="geofenceTitle">
        <item name="android:layout_width">301dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:backgroundTint">#470404</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:gravity">center|center_horizontal|left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="no_data_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/golden</item>
    </style>
</resources>